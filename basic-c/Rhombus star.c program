#include <stdio.h>
main ()
{
	int i,j,k,n;
	printf ("Enter the value for n:");
	scanf ("%d",&n);
	for (i=1;i<=n;i++)
	{
		for (j=1;j<=n-i;j++)
		{
			printf (" ");
		}
		for (k=1;k<=i;k++)
		{
			printf ("*");
		}
		for (j=2;j<=i;j++)
		{
			printf ("*");
		}
		printf ("\n");
	}
	for (i=1;i<n;i++)
	{
		for (j=n;j>n-i;j--)
		{
			printf (" ");
		}
		for (k=n;k>=i+1;k--)
		{
			printf ("*");
		}
		for (j=i;j<=3;j++)
		{
			printf ("*");
		}
		
		printf ("\n");
	}
}
